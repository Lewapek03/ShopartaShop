@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Users</h2>

<p>
    <a asp-action="CreateUser" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <a asp-action="UserDetails" asp-route-id="@user.Id">Details</a> |
                <a asp-action="EditUser" asp-route-id="@user.Id">Edit</a> |
                <a asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
